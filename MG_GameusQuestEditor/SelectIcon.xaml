<Window x:Class="MG_GameusQuestEditor.SelectIcon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SelectIcon" Height="600" Width="560">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button Width="80" Margin="8" IsCancel="True">Cancel</Button>
            <Button Width="80" Margin="8" Click="Button_Click">OK</Button>
        </StackPanel>
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto"  Background="LightGray">
        <Grid HorizontalAlignment="Left" VerticalAlignment="Top">

            <Image x:Name="image" Stretch="None" MouseDown="image_MouseDown" Margin="4"/>
            <Rectangle x:Name="rect" StrokeThickness="4" Width="36" Height="36" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0">
                <Rectangle.Stroke>
                    <SolidColorBrush Color="Red" Opacity="0.8"/>
                </Rectangle.Stroke>
            </Rectangle>
        </Grid>
    </ScrollViewer>
    </DockPanel>
</Window>

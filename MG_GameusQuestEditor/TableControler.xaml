<UserControl x:Class="MG_GameusQuestEditor.TableControler"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MG_GameusQuestEditor"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Vertical" DockPanel.Dock="Right" >
        <Button Margin="4" FontSize="8" Content="+" Width="20" Height="20" ToolTip="Add" Name="add" Click="add_Click"/>
        <Button Margin="4" FontSize="8" Content="-" Width="20" Height="20" ToolTip="Remove" Name="remove" Click="remove_Click"/>
        <Button Margin="4" FontSize="8" Content="↑" Width="20" Height="20" ToolTip="Move Up" Name="up" Click="up_Click"/>
        <Button Margin="4" FontSize="8" Content="↓" Width="20" Height="20" ToolTip="Move Down" Name="down" Click="down_Click"/>
    </StackPanel>
</UserControl>
